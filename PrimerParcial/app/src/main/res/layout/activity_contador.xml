<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Contador"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Contador">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="385dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:textSize="50px"
        android:text="Adivine un numero entre 0 a 100"
        android:textColor="@color/cardview_light_background"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="154dp" />

    <Button
        android:id="@+id/btnReIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReIniciar"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="550dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="73dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/s"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="414dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="74dp"
        android:layout_height="53dp"
        app:srcCompat="@drawable/r"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="424dp" />

    <Button
        android:id="@+id/btnScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="47dp" />

    <Button
        android:id="@+id/btnIntento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intento"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="47dp" />

    <EditText
        android:id="@+id/Adivinar"
        android:layout_width="234dp"
        android:layout_height="86dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="246dp" />

</androidx.constraintlayout.widget.ConstraintLayout>